<% content_for :body_content_title do %>
  <%= @article.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @article.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @article.date %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @article.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Author</h1>
    <p>
      <%=raw @article.author %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @article.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="articles" style="list-style-type:none">
      <% @articles.each do |article| %>
        <li>
          <%= link_to article.title, refinery.articles_article_path(article), :style=> "text-decoration:none;" %>
        </li>
      <% end %> 
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
